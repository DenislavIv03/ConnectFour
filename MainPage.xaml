<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConnectFour.MainPage"
             Title="Connect Four">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Label Text="Connect Four"
               FontSize="36"
               FontAttributes="Bold"
               TextColor="#DADADA"
               HorizontalOptions="Center" 
               Padding="0,0,0,20"/>

        <Button Text="Play"
                FontSize="24"
                TextColor="White"
                BackgroundColor="#8A2BE2"
                CornerRadius="15"
                Padding="10,5"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="OnPlayButtonClicked" />

        <Label HeightRequest="10" />

        <Button Text="Leaderboard"
                FontSize="24"
                TextColor="White"
                BackgroundColor="#8A2BE2"
                CornerRadius="15"
                Padding="10,5"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="OnLeaderboardClicked" />
    </VerticalStackLayout>
</ContentPage>